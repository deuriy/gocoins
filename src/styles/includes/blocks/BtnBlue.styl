	display inline-flex
	justify-content center
	align-items center
	gap 20px
	// padding 6px 11px
	padding 6px 19px
	border none
	outline none
	background var(--blue)
	box-shadow 2px 2px 2px 0 rgba(0, 0, 0, 0.25)
	color var(--white)
	// border-radius 10px
	border-radius 20px
	font-size 12px
	// font-family var(--base-font)
