.ExchangeRateSection
	padding 14px 0 38px
	background #06091E
	text-align center
	
	@media $smPlus
		padding 56px 8px 58px
		text-align left
	
	@media $mdPlus
		padding 76px 8px
	
	&_container
		@media $smPlus
			display grid
			grid-template-columns repeat(2, auto)
			// justify-content start
			justify-content center
			align-items center
			gap 73px
		
		@media $smPlus
			gap 62px
	
	&_text
		margin-bottom 26px
		color var(--orange)
		font-size 20px
		line-height 1
		
		@media $smPlus
			font-size 50px
	
	&_btn
		@media $smPlus
			margin-bottom 46px
			
		@media $mdPlus
			margin-bottom 8px