.Logo
	display inline-grid
	grid-template-columns auto 1fr
	color var(--black)
	text-decoration none
	
	&_img
		grid-row 1 / 3
		width 23px
		
		@media $smPlus
			grid-row 1 / 2
			width 40px
			margin-top -6px
	
	&_siteName
		font-weight 700
		font-size 12px
		line-height 1.2358333
		
		@media $smPlus
			font-size 30px
			line-height 1.236
	
	&_siteDesc
		width 45px
		margin-left 3px
		font-weight 300
		font-size 6px
		line-height 1.2367
		
		@media $smPlus
			width auto
			grid-column 1 / 3
			margin-top -2px
			margin-left 9px
			font-size 14px
		
		@media $mdPlus
			margin-left 0