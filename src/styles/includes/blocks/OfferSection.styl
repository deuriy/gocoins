.OfferSection
	background #06091E
	color var(--white)
	
	@media $xs
		text-align center
	
	&_inner
		padding 56px 17px 39px
		background url("../img/bg_offer_section.jpg") 93% 0 / cover no-repeat
		
		@media $smPlus
			padding 79px 17px 84px
			background-position 77% 0
		
		@media $smMinus
			margin-right -17px
			margin-left -17px
	
		@media $mdPlus
			margin-right 14px
			padding 52px 0 66px
			border-radius 20px
	
	&_title
		margin-bottom 35px
		font-weight 400
		font-size 22px
		line-height 1.136
		text-transform uppercase
		
		@media $smPlus
			margin-bottom 50px
			font-size 40px
			line-height 1.25
			text-align center
		
		@media $mdPlus
			margin-bottom 52px
	
	&_text
		margin-bottom 70px
		margin-left 5px
		font-weight 300
		line-height normal
		text-align left
		
		@media $smPlus
			width 420px
			margin-left 84px
			font-size 30px
			line-height 1.236
		
		@media $mdPlus
			width 520px
			margin-bottom 52px
			margin-left 71px
		
		& > p + p
			margin-top 20px
			
			@media $smPlus
				margin-top 35px
			
			@media $mdPlus
				margin-top 38px
	
	&_btn
		@media $smPlus
			margin-left 86px
		
		@media $mdPlus
			margin-left 75px