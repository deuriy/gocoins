.Tabs
	border-radius 15px
	background #171C29
	
	&_list
		list-style none
		display flex
		
	&_item
		flex 1 0 0
		padding 6px 12px
		background #141622
		color var(--grey)
		font-weight 700
		font-size 12px
		line-height normal
		font-family var(--open-sans)
		text-align center
		text-transform uppercase
		cursor pointer
		@extend .Transition
		
		@media $smPlus
			padding-top 13px
			padding-bottom 13px
			font-size 24px
			line-height 1.361666666666667
		
		&:hover,
		&-active
			background #171C29
			color var(--white)
		
	&_content
		display none
		padding 24px 11px 18px
		
		@media $smPlus
			padding 54px 53px 58px